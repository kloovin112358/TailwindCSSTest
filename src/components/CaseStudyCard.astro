---
// CaseStudyCard.astro
export interface Props {
  imageUrl: string;
  title: string;
  description: string;
  link: string;
  linkText: string;
}

const { imageUrl, title, description, link, linkText } = Astro.props;
---
<div class="p-3">
    <div class="max-w-xs bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
        <a href={link} class="h-96">
            <img class="rounded-t-lg h-48 w-full object-cover" src={imageUrl} alt="" height="50" />
        </a>
        <div class="p-5 h-80 flex flex-col justify-between">
            <div>
                <a href={link}>
                    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{title}</h5>
                </a>
                <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{description}</p>
            </div>
            <div>
                <a href={link} class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-teal-700 rounded-lg hover:bg-teal-800 focus:ring-4 focus:outline-none focus:ring-teal-300 dark:bg-teal-600 dark:hover:bg-teal-700 dark:focus:ring-teal-800">
                {linkText}
                <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                </svg>
                </a>
            </div>
        </div>
    </div>
</div>